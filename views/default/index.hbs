<section id="about" class="about">
    <div class="container"  style="text-align: center;" data-aos="fade-up">
        <div class="section-title">
          <h2>Tạo Stalker mới</h2>
          <p>Nhập link page và rule bạn vào ô dưới đây</p>
        {{#if msg}}
                <div class="alert alert-primary" role="alert">
                {{msg}}
                </div>           
        {{/if}}
        </div>
        <div class="row content">
            <div class="col-lg-12 order-2 order-lg-1">
                <div class="container alignitem" style="text-align: left;">
                    <form method="POST" action="/config">
                        <div class="form-group">
                            <div class="input-group mb-3">
                                <span class="input-group-text" style="width:30%">Điền Url</span>
                                <input type="text" class="form-control" style="width:70%" id="url" name="url" value={{url}}>
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text" style="width:30%">Điền số phần tử</span>
                                <input type="number" class="form-control" style="width:70%" id="num" name="num" value={{num}}>
                            </div>
                        </div>
                        <button class="btn btn-primary col-lg-12" type="submit" id="button-addon1">Tạo luật</button>
                    </form>
                </div>
                {{#if rule}}
                <div class="container alignitem" style="min-height: 200px;text-align: left; margin-top:40px">
                    <h3>Nhập luật vào bảng</h3>
                    <form method="POST" action="/stalker">
                        <div class="form-group">
                            <input type="text" class="form-control" hidden id="url" name="url" value={{url}}>
                            <input type="number" class="form-control" hidden id="num" name="num" value={{num}}>
                            
                            {{#each rule}}
                            <div class="input-group mb-3">
                                <span class="input-group-text" style="width:10%">Phần tử {{this.id}}</span>
                                <input type="text" class="form-control" style="width:10%" id="name_{{this.id}}" name="name_{{this.id}}" value="{{this.name}}">
                                <input type="text" class="form-control" style="width:40%" id="start_{{this.id}}" name="start_{{this.id}}" value="{{this.start}}">
                                <input type="text" class="form-control" style="width:40%" id="end_{{this.id}}" name="end_{{this.id}}" value="{{this.end}}">
                            </div>    
                            {{/each}}
                        </div>
                        <button class="btn btn-primary col-lg-12" type="submit" id="button-addon1">Clone Data</button>
                    </form>
                </div>
                {{/if}}
            </div>            
            <div class="col-lg-12 order-1 order-lg-2" style="margin-top: 50px; text-align: left">
                <div class="container alignitem" style="text-align: left;">
                    {{#if result}}
                    <h3>KẾT QUẢ TRÍCH XUẤT DATA</h3>
                    <table class="table mt-4">
                        <thead>
                            <tr>
                        {{#each fields}}
                            <th class="col">{{this}}</th>
                        {{/each}}
                            </tr>
                        </thead>
                        <tbody>
                        {{#each result as |object objectid|}}
                            <tr>
                            {{#each object}}                        
                                <th style="font-weight: 100;">{{this.data}}</th>
                            {{/each}}
                            </tr>
                        {{/each}}
                        </tbody>  
                    </table>
                    {{else}}
                        <iFrame src="{{url}}" width="100%" name="the-iFrame" frameborder="0"></iFrame>
                    {{/if}}
                </div>
            </div>
        </div>
        
        
    </div>
</section>